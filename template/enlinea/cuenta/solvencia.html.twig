                var inmueble = $(this).closest("tr").find("td:first").text();
                var apto = $(this).closest("tr").find("td:eq(2)").text();
                window.open('{{constant('ROOT')}}php/generarSolvenciaDeCondominio.php?inmueble='+inmueble+'&apto='+apto);
                
